            </ListView>
        </ScrollViewer>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Name="AddGame" Icon="Add" Label="Add" Click="AddGame_Click"/>
        </CommandBar>
    </Page.BottomAppBar>
